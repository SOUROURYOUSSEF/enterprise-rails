# Menu for the sidebar
# Use ERB to pre-process YAML file with embedded RAILS variables
# See http://stackoverflow.com/questions/6655767/how-to-use-yaml-in-a-rails-way

development: &defaults
  title: Rails Authorization
  url:   http://localhost:3000
  sidebar_menu: &sidebar_menu
    dashboard:
      url:          /
      icon:         fa fa-dashboard
      label:
      label_bg:
    users:
      url:          /users
      icon:         fa fa-calendar
      label:        <%= Persistence::User.count %>
      label_bg:     bg-green
    roles:
      url:
      icon:         fa fa-envelope
      label:        <%= Role.count %>
      label_bg:     bg-green
      sub_menu:
        role_1:
          url:        /roles/1
          icon:       fa fa-circle-o
          label:
          label_bg:
        role_2:
          url:        /roles/2
          icon:       fa fa-circle-o
          label:
          label_bg:
    groups:
      url:          /groups
      icon:         fa fa-table
      label:        <%= Group.count %>
      label_bg:     bg-yellow
    classes:
      url:          /application_class
      icon:         fa fa-table
      label:        300
      label_bg:     bg-red
    scopes:
      url:          /application_scope
      icon:         fa fa-table
      label:
      label_bg:

test: *defaults

production:
  title: Rails Authorization
  url:   http://localhost:3000
  sidebar_menu: *sidebar_menu

