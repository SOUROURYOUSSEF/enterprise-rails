/* ovrriding create view of devise with Ajax */

toastr.success('New user has been added successfully');
$('#newUser').modal('hide');
$('#table_content').html('<%= escape_javascript(render 'authorization/users/table', :users => @users) %>');
$('#users_table').DataTable({
    "ajax": "/users.json",
    "columns": [
        { "data": "first_name" },
        { "data": "last_name" },
        { "data": "username" },
        { "data": "email" },
        { "data": "groups" },
        { "data": "scope" },
        { "data": "actions" }
    ],
    "paging": true,
    "bServerSide": true,
    "sServerMethod": "GET",
    "lengthChange": false,
    "searching": true,
    "ordering": true,
    "info": true,
    "autoWidth": false,
    "iDisplayLength": 10
});

