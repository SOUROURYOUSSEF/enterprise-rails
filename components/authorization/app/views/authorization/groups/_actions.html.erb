<div class='row'>
  <div class="col-sm-2">
    <%= link_to edit_group_path(group), :title => 'Edit Group', :remote => true do %>
        <i class="fa fa-lg fa-pencil" style='color:#333;'></i>
    <% end %>
  </div>
  <div class="col-sm-2">
    <%= link_to delete_group_path(group), :title => 'Delete Group', :remote => true do %>
        <i class="fa fa-lg fa-times" style='color:#333;'></i>
    <% end %>
  </div>
  <div class="col-sm-2">
    <%= link_to manage_membership_group_path(group), :title => 'Manage Membership', :class => 'push_state', :remote => true do %>
        <i class="fa fa-lg fa-users" style='color:#333;'></i>
    <% end %>
  </div>

</div>

